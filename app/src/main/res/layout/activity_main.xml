<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="#e0e0e0"
    android:layout_height="match_parent"
    tools:context=".SmartHome">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dehaze"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_dehaze_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="Everywhere"
            android:fontFamily="@font/fontb"
            android:textColor="#4882f4"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            app:layout_constraintEnd_toStartOf="@id/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/dehaze"

            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/home"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/head"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weather"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:background="@drawable/gradientbackground"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/sunimage"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/noto_sun"/>
        <TextView
            android:id="@+id/temp"
            app:layout_constraintTop_toTopOf="@id/sunimage"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sunimage"
            android:text="온도는 25°C 습도 30%"
            android:fontFamily="@font/fontb"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sunimage"
             app:layout_constraintBottom_toBottomOf="@id/sunimage"
            android:text="오늘의 날씨 화창해요"
            android:fontFamily="@font/fontb"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/temp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="스마트 농촌 관리 시스템"
        android:id="@+id/titleofcolumns"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="@font/fontl"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/weather"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"

        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/newbackground"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/chiken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/emojionechicken"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/barntitle"
            />
        <TextView
            android:id="@+id/barntitle"
            android:text="축사 관리"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/fontb"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chiken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/titleofcolumns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button2"
        android:background="@drawable/newbackground"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/smarthome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/house"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hometitle"
            />
        <TextView
            android:id="@+id/hometitle"
            android:text="홈 관리"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/fontb"
            android:textStyle="bold"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/smarthome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/newbackground"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/smartfarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/farmtitle"
            />
        <TextView
            android:id="@+id/farmtitle"
            android:text="팜 관리"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/fontb"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/smartfarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/sett"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="경복대학교 소프트웨어융합과"
        android:fontFamily="@font/fontl"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>