<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="#e0e0e0"
    android:layout_height="match_parent"
    tools:context=".SmartHome">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dehaze"
            android:layout_width="50dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_dehaze_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="Everywhere"
            android:textColor="#4882f4"
            android:fontFamily="@font/fontl"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="35sp"
            app:layout_constraintEnd_toStartOf="@id/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/dehaze"

            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/home"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/head"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/hometitle"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/hometitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:text="홈 환경설정"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/dusttitle"/>
    <TextView
        android:id="@+id/dusttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미세먼지 :"
        android:fontFamily="@font/fontl"
        android:background="@drawable/newbackground"
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dustlayout"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dustlayout"
        app:layout_constraintBottom_toTopOf="@id/TempHum"
        app:layout_constraintTop_toBottomOf="@id/dusttitle"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bacgroundofswitch3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/dustface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="50dp"
            android:layout_marginStart="30dp"
            android:layout_height="50dp"
            android:src="@drawable/happiness"/>
        <TextView
            android:id="@+id/dusttext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/fontb"
            android:text="보통"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TempHum"
        android:padding="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dustlayout"
   app:layout_constraintBottom_toTopOf="@id/switchvalue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/backgroundlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Temperature"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Humidity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="36 %"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/texttemperature"
            app:layout_constraintTop_toBottomOf="@id/Temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="온도"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/texthumidity"
            app:layout_constraintTop_toBottomOf="@id/Temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="습도"
            android:textSize="20sp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/switchtemperature"
        android:layout_width="wrap_content"
        android:text="온도"
        android:textSize="20sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TempHum"
        app:layout_constraintEnd_toStartOf="@id/switchvalue"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"/>

    <Switch
        android:id="@+id/switchvalue"
        android:layout_width="50dp"
        app:layout_constraintTop_toBottomOf="@id/TempHum"
        app:layout_constraintStart_toEndOf="@id/switchtemperature"
        app:layout_constraintEnd_toStartOf="@id/switchhumidiity"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/switchhumidiity"
        android:layout_width="wrap_content"
        android:text="습도"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/TempHum"
      app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/switchvalue"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Ledback"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginVertical="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintHorizontal_chainStyle="packed"
    android:layout_marginTop="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/switchvalue"
        app:layout_constraintEnd_toStartOf="@id/door1"
    android:background="@drawable/newbackground"
    >
        <TextView
            android:id="@+id/ledtitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lamp"
           app:layout_constraintEnd_toEndOf="parent"
           android:text="LED"
            android:fontFamily="@font/fontb"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    <ImageView
        android:id="@+id/lamp"
        android:layout_width="wrap_content"
        android:paddingHorizontal="23dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/ledtitles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switch1"
        android:src="@drawable/groupbig"
        android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="48dp"
            android:onClick="onclickchangebutton"
            android:textOff="off"
            android:textOn="on"
            android:theme="@style/AppTheme.Picker"
            android:thumb="@drawable/thumbupdt"
            app:layout_constraintTop_toBottomOf="@id/lamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:showText="true"
            app:track="@drawable/trackupdt" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/door1"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/Ledback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switchvalue"
        android:background="@drawable/newbackground"
        >

        <TextView
            android:id="@+id/doortitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Door"
            android:textSize="20sp"
            android:fontFamily="@font/fontb"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fan"
            />
        <ImageView
            android:id="@+id/fan"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/doortitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/switch2"
            android:src="@drawable/doorget"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:showText="true"
            android:textOn="open"
            android:textOff="look"
            android:theme="@style/AppTheme.Picker"
            android:minHeight="48dp"
            android:onClick="onclickchangebutton"
            android:thumb="@drawable/thumbupdt"
            app:layout_constraintTop_toBottomOf="@id/fan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            app:track="@drawable/trackupdt" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/backgroundofswitch2"
      android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/door1"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/textimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/fontb"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/logo"
            android:layout_width="wrap_content"
            android:text="메뉴 돌아가기"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>