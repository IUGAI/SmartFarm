<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dfdfdf"
    android:fillViewport="true"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/head"
    android:layout_width="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_height="wrap_content">

<ImageView
    android:id="@+id/dehaze"
    android:layout_width="50dp"
    android:layout_marginTop="20dp"
    android:layout_height="50dp"
    android:layout_marginEnd="10dp"
    android:src="@drawable/ic_baseline_dehaze_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/title"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:text="Everywhere"
        android:fontFamily="@font/fontl"
        android:textColor="#4882f4"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@id/home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dehaze"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/home"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/head"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"/>

    <TextView
        android:id="@+id/titleofscreen"
        android:layout_width="wrap_content"
        android:text="팜 환경관리"
        android:fontFamily="@font/fontb"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toTopOf="@id/ledlayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/ledlayout"
        app:layout_constraintEnd_toStartOf="@id/waterpumplayout"
        android:layout_width="100dp"
        android:background="@drawable/newbackground"
        app:layout_constraintTop_toBottomOf="@id/titleofscreen"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/ledtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="LED"
            android:fontFamily="@font/fontb"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/lamp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/lamp"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ledtitle"
            android:src="@drawable/lightbulb"
            />
<androidx.appcompat.widget.SwitchCompat
    android:id="@+id/switch1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:onClick="changbutton"
    app:track="@drawable/trackupdt"
    android:theme="@style/AppTheme.Picker"
    app:showText="true"
    android:textOn="on"
    android:textOff="off"
    android:thumb="@drawable/thumbupdt"
    app:layout_constraintTop_toBottomOf="@id/lamp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:id="@+id/waterpumplayout"
        android:layout_width="100dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/newbackground"
        app:layout_constraintEnd_toStartOf="@id/fanlayout"
        app:layout_constraintTop_toBottomOf="@id/titleofscreen"
        app:layout_constraintStart_toEndOf="@id/ledlayout">

        <TextView
            android:id="@+id/waterpumptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="워터펌프"
            android:textStyle="bold"
            android:fontFamily="@font/fontb"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/waterpump"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/waterpump"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waterpumptitle"
            android:src="@drawable/waterpump"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch2"
            android:onClick="changbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:track="@drawable/trackupdt"
            app:showText="true"
            android:textOn="on"
            android:theme="@style/AppTheme.Picker"
            android:textOff="off"
            android:thumb="@drawable/thumbupdt"
            app:layout_constraintTop_toBottomOf="@id/waterpump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:id="@+id/fanlayout"
        android:layout_width="100dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/newbackground"
        app:layout_constraintTop_toBottomOf="@id/titleofscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/waterpumplayout">

        <TextView
            android:id="@+id/fantitle"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="환풍기"
            android:fontFamily="@font/fontb"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/fan"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/fan"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fantitle"
            android:src="@drawable/trubofan"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:track="@drawable/trackupdt"
            app:showText="true"
            android:onClick="changbutton"
            android:textOn="on"
            android:textOff="off"
            android:thumb="@drawable/thumbupdt"
            android:theme="@style/AppTheme.Picker"
            app:layout_constraintTop_toBottomOf="@id/fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/settings"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/fanlayout"
        android:layout_width="match_parent"
        android:background="@drawable/newbackground"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fontb"
            android:layout_marginVertical="10dp"
            android:text="팜 환경설정"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temperatureprogress"
            android:text="20"
            android:fontFamily="@font/fontl"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/progress"
        android:max="40"
        android:progress="20"
        android:progressDrawable="@drawable/custimseebar"
        android:thumb="@drawable/thumbleseek"
        android:min="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/temperaturetitle"

          android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/fontl"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:text="온도"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textview_humidity"
        android:text="65"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fontl"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/progress2"
        android:max="140"
        android:progress="65"
        android:progressDrawable="@drawable/custimseebar"
        android:thumb="@drawable/thumbleseek"
        android:min="0"
        app:layout_constraintTop_toBottomOf="@id/textview_humidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/progress"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_gravity="end"
        android:id="@+id/humditytitle"
        android:fontFamily="@font/fontl"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:text="습도"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동작 시간"
            android:fontFamily="@font/fontb"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    <LinearLayout
        android:id="@+id/numberpickelayout"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/progress2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/buttonid_send"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="끝"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
        <NumberPicker
            android:id="@+id/numberpickerstart"
            android:solidColor="#5b80e1"
            android:theme="@style/AppTheme.Picker"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
        <NumberPicker
            android:id="@+id/numberpickerend"
            android:solidColor="#5b80e1"
            android:theme="@style/AppTheme.Picker"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/buttonid_send"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundofswitch2"
        android:text="설정완료"
        android:fontFamily="@font/fontb"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
 />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundofswitch2"
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팜 모니터링 "
            android:fontFamily="@font/fontb"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>